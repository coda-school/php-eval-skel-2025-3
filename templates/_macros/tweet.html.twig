{% macro tweet_card(tweet, app) %}
    <article onclick="window.location='{{ path('app_tweet_show', {_locale: app.request.locale, id: tweet.id}) }}'"
             class="p-4 border-b border-[#292524] hover:bg-[#1c1917]/30 transition cursor-pointer tweet-card"
             data-id="{{ tweet.id }}">

        {# Indication si c'est une réponse #}
        {% if tweet.parentTweet %}
            <div class="text-[#57534e] text-xs mb-2 ml-14 flex items-center gap-1">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/></svg>
                <span>{{ 'tweet.replying_to'|trans({}, 'stela') }} <a href="{{ path('app_user_show', {id: tweet.parentTweet.author.id}) }}" onclick="event.stopPropagation()" class="text-[#c5a059] hover:underline">@{{ tweet.parentTweet.author.username }}</a></span>
            </div>
        {% endif %}

        <div class="flex gap-4">

            {# --- COLONNE GAUCHE (Avatar) --- #}
            <div class="flex-shrink-0">
                <a onclick="event.stopPropagation()"
                   href="{{ path('app_user_show', {'id': tweet.author.id}) }}"
                   title="{{ 'tweet.actions.view_profile'|trans({}, 'stela') }}"
                   class="block">

                    <div class="w-10 h-10 rounded-full bg-[#292524] border border-[#44403c] flex items-center justify-center text-[#78716c] font-bold overflow-hidden hover:border-[#c5a059] transition">
                        {% if tweet.author.avatar %}
                            <img src="{{ asset(tweet.author.avatar) }}" class="w-full h-full object-cover">
                        {% else %}
                            {{ tweet.author.username|slice(0, 1)|upper }}
                        {% endif %}
                    </div>
                </a>
            </div>

            {# --- COLONNE DROITE (Contenu) --- #}
            <div class="flex-1 min-w-0">

                {# Header #}
                <div class="flex items-center justify-between mb-1">
                    <div class="flex items-center gap-2 flex-wrap">
                        <a onclick="event.stopPropagation()" href="{{ path('app_user_show', {'id': tweet.author.id}) }}" class="font-bold text-[#e7e5e4] hover:underline font-cinzel truncate" title="{{ 'tweet.actions.view_profile'|trans({}, 'stela') }}">
                            {{ tweet.author.getName() }}
                        </a>
                        <span class="text-[#78716c] text-sm truncate">@{{ tweet.author.username }}</span>
                        <span class="text-[#44403c] text-xs">•</span>
                        <span class="text-[#78716c] text-xs hover:underline" title="{{ tweet.createdDate|date('d/m/Y H:i') }}">
                            {{ tweet.createdDate ? tweet.createdDate|ago : 'Now' }}
                        </span>
                    </div>

                    {% if app.user == tweet.author %}
                        <div class="flex items-center ml-2 gap-1">
                            <a onclick="event.stopPropagation()" href="{{ path('app_tweet_edit', {'id': tweet.id}) }}" class="text-[#44403c] hover:text-[#c5a059] hover:bg-[#c5a059]/10 rounded-full p-1.5 transition" title="{{ 'tweet.actions.edit'|default('Corriger') }}">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/></svg>
                            </a>
                            <form onclick="event.stopPropagation()" method="post" action="{{ path('app_tweet_delete', {'id': tweet.id}) }}" class="delete-form flex">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tweet.id) }}">
                                <button onclick="event.stopPropagation()" type="submit" class="text-[#44403c] hover:text-red-500 hover:bg-red-900/10 rounded-full p-1.5 transition" title="{{ 'tweet.actions.delete'|trans({}, 'stela') }}">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                                </button>
                            </form>
                        </div>
                    {% endif %}
                </div>

                {# Content #}
                <p class="text-[#d6d3d1] whitespace-pre-wrap leading-relaxed text-[15px] font-serif mb-3 break-words">{{ tweet.content }}</p>

                {% if tweet.imageFilename %}
                    <div class="mt-2 mb-3 rounded-xl overflow-hidden border border-[#292524] max-w-full">
                        <img src="{{ asset('uploads/tweets/' ~ tweet.imageFilename) }}" class="w-full h-auto object-cover max-h-[500px]">
                    </div>
                {% endif %}

                {# Actions #}
                <div class="flex justify-between max-w-md mt-3 text-[#78716c]">

                    {# Commentaire #}
                    <a onclick="event.stopPropagation()" href="{{ path('app_tweet_show', {'id': tweet.id}) }}" class="flex items-center gap-2 hover:text-blue-400 group text-xs transition cursor-pointer z-10 relative" title="{{ 'tweet.actions.reply'|trans({}, 'stela') }}">
                        <div class="p-2 rounded-full group-hover:bg-blue-400/10 transition">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/></svg>
                        </div>
                        <span>{{ tweet.replyCount }}</span>
                    </a>

                    {# Like #}
                    {% set is_liked = tweet.isLikedByUser(app.user) %}
                    <button onclick="event.stopPropagation()" class="flex items-center gap-2 group text-xs transition like-btn {{ is_liked ? 'text-[#c5a059]' : 'hover:text-[#c5a059] text-[#78716c]' }}"
                            data-url="{{ path('app_tweet_like', {'id': tweet.id}) }}"
                            data-id="{{ tweet.id }}"
                            data-title-like="{{ 'tweet.actions.like'|trans({}, 'stela') }}"
                            data-title-unlike="{{ 'tweet.actions.unlike'|trans({}, 'stela') }}"
                            title="{{ is_liked ? 'tweet.actions.unlike'|trans({}, 'stela') : 'tweet.actions.like'|trans({}, 'stela') }}">
                        <div class="p-2 rounded-full group-hover:bg-[#c5a059]/10 transition-transform active:scale-75">
                            <svg class="w-4 h-4 like-icon" fill="{{ is_liked ? 'currentColor' : 'none' }}" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"/></svg>
                        </div>
                        <span class="like-count font-bold">{{ tweet.likesCount }}</span>
                    </button>

                    {# Partager #}
                    <button onclick="event.stopPropagation()" class="flex items-center gap-2 hover:text-green-400 group text-xs transition cursor-pointer z-10 relative" title="{{ 'tweet.actions.share'|trans({}, 'stela') }}">
                        <div class="p-2 rounded-full group-hover:bg-green-400/10 transition">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"/></svg>
                        </div>
                    </button>

                    {# Vues #}
                    <div class="flex items-center gap-2 group text-xs text-[#57534e]" title="{{ 'tweet.stats.views'|trans({}, 'stela') }}">
                        <div class="p-2">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
                        </div>
                        <span class="view-count">{{ tweet.viewsCount }}</span>
                    </div>
                </div>
            </div>
        </div>
    </article>
{% endmacro %}
