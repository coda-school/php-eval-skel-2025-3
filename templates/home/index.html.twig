{% extends 'base.html.twig' %}

{% block title %}STELA - {{ 'home.title'|trans }}{% endblock %}

{% block body %}
    <div class="min-h-screen bg-[#0f172a] flex flex-col items-center justify-center p-6 text-slate-200">

        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] bg-blue-500/10 blur-[120px] rounded-full pointer-events-none"></div>

        <div class="relative z-10 text-center max-w-2xl w-full">

            <h1 class="text-7xl font-black tracking-[0.2em] uppercase text-transparent bg-clip-text bg-gradient-to-b from-white to-slate-500 mb-2">
                Stela
            </h1>
            <div class="h-1 w-24 bg-gradient-to-r from-transparent via-blue-500 to-transparent mx-auto mb-10"></div>

            <p class="text-lg font-light italic text-slate-400 mb-12 tracking-wide">
                {{ 'home.welcome_subtitle'|trans }}
            </p>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-16">

                <a href="{{ path('app_login') }}" class="group relative p-8 bg-slate-900/40 backdrop-blur-md border border-slate-800 rounded-xl transition-all duration-300 hover:border-blue-500/50 hover:shadow-[0_0_20px_rgba(59,130,246,0.1)]">
                    <h2 class="text-xl font-bold uppercase tracking-widest mb-3 text-white group-hover:text-blue-400 transition-colors">
                        {{ 'home.action.login'|trans }}
                    </h2>
                    <p class="text-sm text-slate-500 leading-relaxed">
                        {{ 'home.desc.login'|trans }}
                    </p>
                </a>

                <a href="{{ path('app_register') }}" class="group relative p-8 bg-slate-900/40 backdrop-blur-md border border-slate-800 rounded-xl transition-all duration-300 hover:border-emerald-500/50 hover:shadow-[0_0_20px_rgba(16,185,129,0.1)]">
                    <h2 class="text-xl font-bold uppercase tracking-widest mb-3 text-white group-hover:text-emerald-400 transition-colors">
                        {{ 'home.action.register'|trans }}
                    </h2>
                    <p class="text-sm text-slate-500 leading-relaxed">
                        {{ 'home.desc.register'|trans }}
                    </p>
                </a>

            </div>

            <div class="flex items-center justify-center space-x-8 text-[10px] font-mono tracking-[0.4em] uppercase">
                <a href="{{ path('app_home', {'_locale': 'fr'}) }}"
                   class="transition-all duration-300 {% if app.request.locale == 'fr' %}text-blue-400 border-b border-blue-400 pb-1{% else %}text-slate-600 hover:text-slate-300{% endif %}">
                    FR
                </a>
                <a href="{{ path('app_home', {'_locale': 'en'}) }}"
                   class="transition-all duration-300 {% if app.request.locale == 'en' %}text-blue-400 border-b border-blue-400 pb-1{% else %}text-slate-600 hover:text-slate-300{% endif %}">
                    EN
                </a>
            </div>
        </div>
    </div>
{% endblock %}
